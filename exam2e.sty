\RequirePackage{amsmath}
\RequirePackage{amsthm}



%%
% Die Umgebung 'questions' wird nicht definiert, sie wird nur bei den Klassenarbeiten (exam documentclass) verwendet, nicht in den Skripten. 




%% --- QUESTIONS, die Umgebung für Aufgaben --------------------

\newcounter{questionID}
\newcounter{solutionID}
\setcounter{questionID}{0} 
\setcounter{solutionID}{0} 

\newcounter{question}[section]
\makeatletter
\@addtoreset{question}{section}% reset with section
\@addtoreset{question}{subsection}% reset with subsection
\@addtoreset{question}{subsubsection} 
\makeatother
\setcounter{question}{0} 

\newenvironment{question}[1][]{
	\refstepcounter{questionID}% globalen Zähler
	\stepcounter{question}%		 abschnittsinterner Zähler
	\noindent{\bf Aufgabe~\arabic{question}}\hspace*{1em}% markup
}{}



%% --- QUESTIONPARTS (alias subquestion) --------------------

% Wir halten uns fern vom part counter:
\newcounter{subquestion}[question]% Neu zählen bei question.
\makeatletter
\@addtoreset{subquestion}{solutionID}% reset with solution
\@addtoreset{subquestion}{section}% reset with section
\@addtoreset{subquestion}{subsection}% reset with subsection
\@addtoreset{subquestion}{subsubsection}% 
\makeatother
\setcounter{subquestion}{0}%


%%
% Environment for parts of questions "1.1" :
\newenvironment{parts}{%
\begin{list}%
{\bf \arabic{question}.\arabic{subquestion}}% markup
{\usecounter{subquestion}
 \setlength\labelsep{.5em}% Abstand label zu Text.
 \setlength\leftmargin{1.5em}% Abstand Text vom linken Rand
 \setlength\listparindent{0.5in}% Absatz einrücken
 \setlength\parsep{0in}
}%
}{\end{list}}%end newenvironment parts.
%
% Die Umgebung wird genutzt mit \part (wie in exam documentclass):
\renewcommand{\part}{\item}% Diese Zeile falls documentclass report oder book


%% --- SUBPARTS --------------------

% Wir halten uns fern vom part counter:
\newcounter{subpart}[question]% Neu zählen bei question.
\makeatletter
\@addtoreset{subpart}{solutionID}% reset with solution
\@addtoreset{subpart}{section}% reset with section
\@addtoreset{subpart}{subsection}% reset with subsection
\@addtoreset{subpart}{subsubsection}% 
\makeatother
\setcounter{subpart}{0}%


%%
% Environment for subparts of questions "(a)" :
\newenvironment{subparts}{%
\begin{list}%
{(\alph{subpart})}% markup
{\usecounter{subpart}
 \setlength\labelsep{.5em}% Abstand label zu Text.
 \setlength\leftmargin{2em}% Abstand Text vom linken Rand
 \setlength\listparindent{0.5in}% Absatz einrücken
 \setlength\parsep{0in}
}%
}{\end{list}}%end newenvironment parts.
%
% Die Umgebung wird genutzt mit \part (wie in exam documentclass):
\newcommand{\subpart}{\item}%



%% --- SUBSUBPARTS --------------------

% Wir halten uns fern vom part counter:
\newcounter{subsubpart}[subpart]% Neu zählen bei subpart.
\makeatletter
\@addtoreset{subsubpart}{solutionID}% reset with solution
\@addtoreset{subsubpart}{section}% reset with section
\@addtoreset{subsubpart}{subsection}% reset with subsection
\@addtoreset{subsubpart}{subsubsection}% 
\makeatother
\setcounter{subsubpart}{0}%


%%
% Environment for subparts of questions "(a)" :
\newenvironment{subsubparts}{%
\begin{list}%
{\roman{subsubpart}.}% markup
{\usecounter{subsubpart}
 \setlength\labelsep{.5em}% Abstand label zu Text.
 \setlength\leftmargin{2em}% Abstand Text vom linken Rand
 \setlength\listparindent{0.5in}% Absatz einrücken
 \setlength\parsep{0in}
}%
}{\end{list}}%end newenvironment parts.
%
% Die Umgebung wird genutzt mit \part (wie in exam documentclass):
\newcommand{\subsubpart}{\item}%

