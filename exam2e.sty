%% -- the QUESTION environment, counted sectionwise ---------------
\newcounter{question}[section]
\newcounter{questionID}
\renewcommand*\thequestion{\arabic{question}} 
%instead of \thesection and omitting the "\arabic{section}."
%
% Label to be used in the left margin of a question:
\newcommand{\questionletter}{A}
% Change this letter to "S" within the "stationen" environment:
\newenvironment{stationen}%
{%
  \renewcommand{\questionletter}{S}%
  \setcounter{question}{0}
}
{\renewcommand{\questionletter}{A}}
% end newcommand stationen.
%
\newenvironment{question}[1][]% optional argument to ignore question points if provided
{% zunächst die Counter:
  \stepcounter{question}%
  \refstepcounter{questionID}%
  % Es folgt das Target für hyperref:
  \hypertarget{ex:\thequestionID}{}%
  \expandafter\xdef\csname question\roman{questionID}\endcsname{\thequestion}%
  \ifcsname solution\roman{questionID}\endcsname%
  \else%
    \let\hyperlink\ex@hyperlink%
  \fi%
  % Markup:
  % "A" for Aufgabe and "S" for Station: \questionletter 
  \smallskip\noindent\makebox[0pt][r]{\hyperlink{sol:\thequestionID}{\questionletter\thequestion}\quad}%
% #1\unskip
%  {{\@ifnotempty{#1}{#1}}}% optionally: name of the question OLD
  {\@ifnotempty{#1}{\emph{#1}\hspace{.75em}}}% possibly followed by '.' or ':'. For reference: Tufte paragraph adds 1em. 
% ifnotempty is from the amsthm package.
}% end begin question.
{}% end question environment

% the solution environment
\newcounter{solutionID}%
\newenvironment{solution}[1][Lösung]%
{%
  \refstepcounter{solutionID}%
  \immediate\write\@auxout{%
    \noexpand\global\noexpand\@namedef{solution\roman{solutionID}}{\thesolutionID}}%
  \hypertarget{sol:\thesolutionID}{}%
  % Markup:
  \noindent\makebox[0pt][r]{\hyperlink{ex:\thesolutionID}{L\@nameuse{question\roman{solutionID}}}\quad}%
  % Text der Lösung:
  \emph{#1:\enskip}%
}{}%







