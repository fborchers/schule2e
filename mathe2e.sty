%% Definition von \vector zum Drucken von Spaltenvektoren :
\def\vector(#1){%
\mathchoice%
     {\pmatrix@i{\vector@i#1,,}}%
     {\pmatrix@ii{\vector@i#1,,}}%
     {}% scriptstyle too small,
     {}% ss style too small.
}% Ende Definition \vector. Hilfsfunktionen sind dabei : 
\def\vector@i#1,{\if,#1,\else{#1}\cr\expandafter\vector@i\fi}
\def\pmatrix@i#1{\begin{pmatrix}#1\end{pmatrix}}
\def\pmatrix@ii#1{\left(\!\begin{smallmatrix}#1\end{smallmatrix}\!\right)}

%% Definition \coords zum Drucken von Zeilenvektoren :
\def\coords(#1,#2){\left(#1\coords@i#2,,\right)}
\def\coords@i#1,{\if,#1,\else|{#1}\expandafter\coords@i\fi}
